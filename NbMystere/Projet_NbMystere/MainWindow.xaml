<Window x:Class="Projet_NbMystere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_NbMystere"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Fichier">
                    <MenuItem Header="Télécharger Fiche Joueur" />
                    <Separator />
                    <MenuItem Header="Quitter" />
                </MenuItem>
                <MenuItem Header="Gestion Joueur">
                    <MenuItem Header="Nouveau Joueur" Click="MenuItem_Click" />
                    <Separator />
                    <MenuItem Header="Visualiser Joueur" />
                </MenuItem>
                <MenuItem Header="Gestion Partie">
                    <MenuItem Header="Difficulté" />
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
