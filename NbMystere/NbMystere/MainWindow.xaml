<Window x:Class="NbMystere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NbMystere"
        mc:Ignorable="d"
        Title="Nb Mystere" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Fichier">
                    <MenuItem Header="Quitter" Click="Close_Click" />
                </MenuItem>
                <MenuItem Header="Gestion Joueur">
                    <MenuItem Header="Nouveau Joueur" Click="NewPlayer_Click" />
                    <Separator />
                    <MenuItem Header="Visualiser Joueur" Click="ShowPlayer_Click"  />
                </MenuItem>
                <MenuItem Header="Gestion Partie" >
                    <MenuItem Header="Lancer" Click="Ident_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
