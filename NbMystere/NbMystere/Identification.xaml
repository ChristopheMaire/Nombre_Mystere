<Window x:Class="NbMystere.Identification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NbMystere"
        mc:Ignorable="d"
        Title="Identification" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="lblTitleIdentification" Text="Entrez vos identifiants" TextAlignment="Center" Margin="0,10,0,227"/>

        <TextBlock x:Name="lblNomIdent" TextAlignment="Justify" Margin="10,79,196,150" Text="Nom"/>
        <TextBox x:Name="txtNomIdent" Margin="100,79,10,162" />

        <TextBlock x:Name="lblMdpIdent" Margin="10,130,196,99" Text="Mot de Passe"/>
        <TextBox x:Name="txtMdpIdent" Margin="100,130,10,111" />

        <Button x:Name="identButton" Margin="70,215,70,19" Click="identButton_Click">Lancer</Button>
        <TextBlock x:Name="lblTentativeIdent" Text="" TextAlignment="Center" Margin="0,79,0,99" Visibility="Hidden"/>
    </Grid>

</Window>
